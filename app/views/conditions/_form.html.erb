      <%= f.text_field :cday, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cday) %>
  </div>
  <div class="form-group">
    <%= f.label :mp, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mp, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mp) %>
  </div>
  <div class="form-group">
    <%= f.label :hp, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :hp, :class => 'form-control' %>
    </div>
    <%=f.error_span(:hp) %>
  </div>
  <div class="form-group">
    <%= f.label :temperature, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :temperature, :class => 'form-control' %>
    </div>
    <%=f.error_span(:temperature) %>
  </div>
  <div class="form-group">
    <%= f.label :whether, :class => 'control-label col-lg-2' %>
