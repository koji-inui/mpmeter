<%= form_for @condition, :html => { :class => "form-horizontal condition" } do |f| %>

  <% if @condition.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@condition.errors.count, "error") %> prohibited this condition from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @condition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :cday, :class => 'control-label col-lg-2' %>
