    <%=f.error_span(:whether) %>
  </div>
  <div class="form-group">
    <%= f.label :sleep_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sleep_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sleep_time) %>
  </div>
  <div class="form-group">
    <%= f.label :eja_times, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :eja_times, :class => 'form-control' %>
    </div>
    <%=f.error_span(:eja_times) %>
  </div>
  <div class="form-group">
    <%= f.label :noting, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :noting, :class => 'form-control' %>
    </div>
    <%=f.error_span(:noting) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                conditions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
